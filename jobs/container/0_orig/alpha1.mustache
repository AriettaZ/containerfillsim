FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      alpha1;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0.0; 

boundaryField
{
    {{#inlet_list}}
    "{{name}}_.*"
    {
        type            inletOutlet;
        inletValue      uniform 1;
        value           uniform 1;
    }
    {{/inlet_list}}
    {{#outlet_list}}
    "{{name}}_.*"
    {
        type            zeroGradient;
    }
    {{/outlet_list}}
    "{{walls_name}}_.*"
    {
        type            zeroGradient;
    }
}


