FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    {{#inlet_list}}
    "{{name}}_.*"
    {
        type            fixedValue;
        value           uniform ({{vx}}  {{vy}}  {{vz}});
    }
    {{/inlet_list}}
    {{#outlet_list}}
    "{{name}}_.*"
    {
        type            zeroGradient;
    }
    {{/outlet_list}}
    "{{walls_name}}_.*"
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
}


