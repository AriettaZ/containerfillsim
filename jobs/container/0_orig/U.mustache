FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    "{{inlet1_name}}_.*"
    {
        type            fixedValue;
        value           uniform ({{inlet1_vx}}  {{inlet1_vy}}  {{inlet1_vz}});
    }
    "{{inlet2_name}}_.*"
    {
        type            fixedValue;
        value           uniform ({{inlet2_vx}}  {{inlet2_vy}}  {{inlet2_vz}});
    }

    "{{outlet_name}}_.*"
    {
        type            zeroGradient;
    }
    "{{walls_name}}_.*"
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
}


