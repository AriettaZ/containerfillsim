FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 1.0;

boundaryField
{
    {{#inlet_list}}
    "{{name}}_.*"
    {
        type            turbulentMixingLengthDissipationRateInlet;
        mixingLength    0.003;
        value           uniform 1.0;
    }
    {{/inlet_list}}
    {{#outlet_list}}
    "{{name}}_.*"
    {
        type            zeroGradient;
    }
    {{/outlet_list}}
    "{{walls_name}}_.*"
    {
        type            zeroGradient;
    }
}


