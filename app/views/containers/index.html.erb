<div class="page-header">
  <h2>Listing Containers</h2>
</div>

<table class="table data-table">
  <thead>
    <tr>
      <th>#</th>
      <th>Status</th>
      <th>Name</th>
      <th>Temperature</th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
    </tr>
  </thead>

  <tbody>
    <% @containers.each do |container| %>
      <tr>
        <td><%= container.id %></td>
        <td><%= container.status %></td>
        <td><%= container.name %></td>
        <td><%= container.temperature %></td>
        <td><%= link_to 'Submit', submit_container_path(container), method: :put, class: 'btn btn-success btn-sm' if container.not_submitted? %></td>
        <td><%= link_to 'Show', container, class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_container_path(container), class: 'btn btn-default btn-sm' if container.not_submitted? %></td>
        <td><%= link_to 'Copy', copy_container_path(container), method: :put, class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Destroy', container, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New container', new_container_path %>
