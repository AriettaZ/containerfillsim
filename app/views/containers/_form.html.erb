<%= bootstrap_form_for(@container) do |f| %>

  <%= f.alert_message "Please fix the errors below." %>

  <%= f.text_field :name %>

  <%= f.file_field :inlet %>
  <%= f.file_field :outlet %>
  <%= f.file_field :walls %>

  <%= f.select :measurement_scale, Container::MEASUREMENT_SCALES.to_a %>

  <%= f.select :fluid_type, Container::FLUID_TYPES, include_blank: true %>
  <%= f.number_field :kinematic_viscosity, min: 0.0, step: 'any' %>
  <%= f.number_field :density, min: 0.0, step: 'any' %>

  <%= f.number_field :outlet_pressure, min: 0.0, step: 'any' %>
  <%= f.number_field :inlet_vx, step: 'any' %>
  <%= f.number_field :inlet_vy, step: 'any' %>
  <%= f.number_field :inlet_vz, step: 'any' %>

  <%= f.submit "Save", class: "btn btn-primary" %>
  <%= button_tag "Reset", type: :reset, class: 'btn btn-default' %>
<% end %>
