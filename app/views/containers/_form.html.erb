    <%= f.label :inlet %><br>
    <%= f.file_field :inlet %>
  </div>
  
  <div class="field">
    <%= f.label :outlet %><br>
    <%= f.file_field :outlet %>
  </div>
  <div class="field">
    <%= f.label :walls %><br>
    <%= f.file_field :walls %>
  </div>
  <div class="field">
    <%= f.label :measurement_scale %><br>
    <%= select_tag(:measurement_scale, options_for_select(Container::MEASUREMENT_SCALES.to_a)) %>
  </div>
  <div class="field">
    <%= f.label :fluid_type %><br>
    <%= select_tag(:fluid_type, options_for_select(Container::FLUID_TYPES)) %>
  </div>
  <div class="field">
    <%= f.label :kinematic_viscosity %><br>
    <%= f.text_field :kinematic_viscosity %>
  </div>
  <div class="field">
    <%= f.label :density %><br>
    <%= f.text_field :density %>
  </div>
  <div class="field">
    <%= f.label :outlet_pressure %><br>
    <%= f.text_field :outlet_pressure %>
  </div>
  <div class="field">
    <%= f.label :inlet_vx %><br>
    <%= f.text_field :inlet_vx %>
  </div>
  <div class="field">
